<VirtualHost *:80>
    ServerName {{name}}
    DocumentRoot /var/www/{{customer.name}}/{{name}}

    ErrorLog "|/usr/bin/cronolog ${APACHE_LOG_DIR}/{{customer.name}}/{{name}}/error.log-%Y%m%d"
    CustomLog "|/usr/bin/cronolog ${APACHE_LOG_DIR}/{{customer.name}}/{{name}}/access.log-%Y%m%d" combined

    <FilesMatch ".+\.php$">
        SetHandler "proxy:unix:/run/php/{{name}}.sock|fcgi://localhost"
    </FilesMatch>

    <Directory /var/www/{{customer.name}}/{{name}}>
        AllowOverride All
    </Directory>
</VirtualHost>
