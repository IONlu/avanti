<VirtualHost *:80>
    ServerName {{name}}
    DocumentRoot {{documentRoot}}

    ErrorLog "|/usr/bin/cronolog ${APACHE_LOG_DIR}/{{client.name}}/{{name}}/error.log-%Y%m%d"
    CustomLog "|/usr/bin/cronolog ${APACHE_LOG_DIR}/{{client.name}}/{{name}}/access.log-%Y%m%d" combined

    <FilesMatch ".+\.php$">
        SetHandler "proxy:unix:/run/php/{{user}}.sock|fcgi://localhost"
    </FilesMatch>

    <Directory {{documentRoot}}>
        AllowOverride All
    </Directory>
</VirtualHost>
